<Window x:Class="Videditor.Dialogs.SetDurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videditor.Dialogs"
        mc:Ignorable="d"
        Title="Продолжительность" Height="150" Width="500">
    <DockPanel>
        <StackPanel Background="Black">
            <TextBlock Text="Продолжительность" HorizontalAlignment="Center" Margin="15, 10" Foreground="White" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBox x:Name="duration" Width="175" Margin="10, 10" KeyUp="SetDurationFromKeysHandler" />
                <Button VerticalAlignment="Center" Content="ОК" Width="50" Foreground="White" Background="Blue" Click="SetDurationHandler" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
